{
  "name": "riot-composables",
  "version": "0.0.1",
  "description": "A collection of reusable composable functions for Riot.js applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "riot",
    "riotjs",
    "composables",
    "hooks",
    "reactive",
    "composition-api"
  ],
  "author": "kkeeth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkeeth/riot-composables.git"
  },
  "bugs": {
    "url": "https://github.com/kkeeth/riot-composables/issues"
  },
  "homepage": "https://github.com/kkeeth/riot-composables#readme",
  "packageManager": "pnpm@10.16.0",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.15",
    "jsdom": "^27.0.0",
    "riot": "^10.0.1",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.15"
  }
}
